<UserControl x:Class="TravelAgencyAdmin.Pages.UserRoleListPage"
             Name="Form"
             Tag="Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600"
             HorizontalAlignment="Stretch"
             xmlns:local="clr-namespace:TravelAgencyAdmin.Pages"
             VerticalAlignment="Stretch">

    <Grid Margin="0" Background="{DynamicResource AccentColorBrush}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid x:Name="DgListView" SelectionMode="Single" IsReadOnly="True" VerticalAlignment="Top" Width="{Binding Path=ActualWidth, ElementName=Form}"
            Height="{Binding Path=ActualHeight, ElementName=Form}" SelectionChanged="DgListView_SelectionChanged"  MouseDoubleClick="DgListView_MouseDoubleClick" HorizontalAlignment="Left" 
            AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" />
        </Grid>

        <Grid x:Name="ListForm" Visibility="Visible" Background="{DynamicResource WhiteBrush}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

            <Label x:Name="lbl_id" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown x:Name="txt_id" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" IsEnabled="False" HideUpDownButtons="True" 
                      Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label x:Name="lbl_role" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="txt_role" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.ClearTextButton="true" 
                     Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" ToolTip=""/>

            <Label x:Name="lbl_description" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="txt_description" Grid.Row="2" Grid.Column="1" Margin="0,2,0,2" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Visible" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" />
            
            <Label x:Name="lbl_active" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox x:Name="chb_active" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" />

            <Label x:Name="lbl_timestamp" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:DateTimePicker x:Name="dp_timestamp" Grid.Row="4" Grid.Column="1" Margin="0,2,0,2" ShowDropDownButton="False"
                                        Controls:TextBoxHelper.UseFloatingWatermark="false" TextAlignment="Left"
                                        Controls:TextBoxHelper.Watermark="" Format="SortableDateTime" IsEnabled="False"/>

            

            <Button Grid.Row="6" Name="btn_save" Grid.Column="0" HorizontalAlignment="Left" Margin="44,21,0,44" Width="200"  Height="40" 
                VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Click="BtnSave_Click" />
            <Button Grid.Row="6" Name="btn_cancel" Grid.Column="1" HorizontalAlignment="Right" Margin="44,21,44,44" Width="200" 
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Click="BtnCancel_Click" />
        </Grid>
    </Grid>
</UserControl>
