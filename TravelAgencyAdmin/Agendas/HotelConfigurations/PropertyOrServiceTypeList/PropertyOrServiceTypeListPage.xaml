<UserControl
    x:Class="TravelAgencyAdmin.Pages.PropertyOrServiceTypeListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TravelAgencyAdmin.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top" AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True"
                MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_translation" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                FontSize="16" FontWeight="Bold" />

            <Label
                x:Name="lbl_systemName" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_systemName" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" ToolTip="Tento přeložený název je název poplatku, kteří inzerenti zadávají při nastavení ubytování" />

            <Label
                x:Name="lbl_unit" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_unit" Grid.Row="1" Grid.Column="3" Margin="0,2,0,2" HorizontalAlignment="Stretch"
                VerticalAlignment="Center" Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Translation" IsEnabled="true"
                SelectedValuePath="Id" ToolTip="Jednotka je zobrazována ve vyhledávači" />

            <GroupBox
                x:Name="gb_valueType" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="5">
                <Grid Background="{DynamicResource WhiteBrush}" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label
                        x:Name="lbl_service" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                        ToolTip="Property je typu služba" />
                    <CheckBox
                        x:Name="chb_service" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <Label
                        x:Name="lbl_searchRequired" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <CheckBox
                        x:Name="chb_searchRequired" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center"
                        Checked="SearchCheckedClick" ToolTip="Property bude ihned zobrazena v druhotném vyhledávači. Je povinná pro všechny inzerenty." Unchecked="SearchCheckedClick" />
                    <Label
                        x:Name="lbl_isBit" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <RadioButton
                        x:Name="chb_isBit" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                        Checked="IsBitClick" GroupName="valueType" IsChecked="True" Unchecked="IsBitClick" />
                    <Label
                        x:Name="lbl_isValue" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <RadioButton
                        x:Name="chb_isValue" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center"
                        GroupName="valueType" />
                    <Separator
                        Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Height="4" HorizontalAlignment="Stretch"
                        Background="Gray" />
                    <Label
                        x:Name="lbl_isValueRangeAllowed" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <CheckBox
                        x:Name="chb_isValueRangeAllowed" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                        Checked="ValueRangeAllowedClick" IsEnabled="False" Unchecked="ValueRangeAllowedClick" />
                    <Label
                        x:Name="lbl_isRangeValue" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <RadioButton
                        x:Name="chb_isRangeValue" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center"
                        GroupName="rangeType" IsEnabled="False" />
                    <Label
                        x:Name="lbl_isRangeTime" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <RadioButton
                        x:Name="chb_isRangeTime" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center"
                        GroupName="rangeType" IsEnabled="False" />
                </Grid>

            </GroupBox>
            <GroupBox
                x:Name="gb_searchEngine" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Margin="5"
                IsEnabled="False">
                <Grid Background="{DynamicResource WhiteBrush}" Visibility="Visible">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        x:Name="lbl_defaultBit" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <CheckBox
                        x:Name="chb_defaultBit" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <Label
                        x:Name="lbl_defaultValue" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <TextBox
                        x:Name="txt_defaultValue" Grid.Row="0" Grid.Column="2" Margin="0,2,0,2" IsEnabled="False" />
                    <Label
                        x:Name="lbl_defaultMin" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <Controls:NumericUpDown
                        x:Name="txt_defaultMin" Grid.Row="1" Grid.Column="1" Width="150" Margin="0,2,0,2"
                        HorizontalAlignment="Left" IsEnabled="False" />
                    <Label
                        x:Name="lbl_defaultMax" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
                    <Controls:NumericUpDown
                        x:Name="txt_defaultMax" Grid.Row="1" Grid.Column="2" Width="150" Margin="0,2,0,2"
                        HorizontalAlignment="Left" IsEnabled="False" />
                </Grid>
            </GroupBox>
            <Label
                x:Name="lbl_feeInfoRequired" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_feeInfoRequired" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Label
                x:Name="lbl_feeRangeAllowed" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Right" HorizontalContentAlignment="Left" />
            <CheckBox
                x:Name="chb_feeRangeAllowed" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" />


            <Button
                Name="btn_save" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Width="200"
                Height="40" Margin="44,21,0,44" HorizontalAlignment="Left" VerticalAlignment="Bottom" Controls:ButtonHelper.PreserveTextCase="True"
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_cancel" Grid.Row="10" Grid.Column="2" Grid.ColumnSpan="2" Width="200"
                Height="40" Margin="44,21,44,44" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>
