<UserControl x:Class="TravelAgencyAdmin.Pages.ReportListPage"  
             Name="Form" Tag="Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600"
             HorizontalAlignment="Stretch"
             xmlns:local="clr-namespace:TravelAgencyAdmin.Pages"
             VerticalAlignment="Stretch">

    
    <Grid Margin="0" Background="{DynamicResource AccentColorBrush}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid x:Name="DgListView" SelectionMode="Single" IsReadOnly="True" VerticalAlignment="Top" Width="{Binding Path=ActualWidth, ElementName=Form}"
            Height="{Binding Path=ActualHeight, ElementName=Form}" SelectionChanged="DgListView_SelectionChanged"  MouseDoubleClick="DgListView_MouseDoubleClick" HorizontalAlignment="Left" 
            AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" />
        </Grid>

        
        <Grid x:Name="ListForm" Visibility="Visible" Background="{DynamicResource WhiteBrush}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

            <Label x:Name="lbl_id" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown x:Name="txt_id" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" IsEnabled="False" HideUpDownButtons="True" 
                                    Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label x:Name="lbl_pageName" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox Name="cb_pageName" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                            DisplayMemberPath="Name" SelectedValuePath="Name" Controls:TextBoxHelper.ClearTextButton="false" IsEnabled="true" />

            <Label x:Name="lbl_name" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="txt_name" Grid.Row="2" Grid.Column="1" Margin="0,2,0,2" AcceptsReturn="True" Controls:TextBoxHelper.IsWaitingForData="True" 
                         Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" />

            <Label x:Name="lbl_joinedId" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox x:Name="chb_joinedId" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"></CheckBox>
            
            <Label x:Name="lbl_description" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="txt_description" Grid.Row="4" Grid.Column="1" Margin="0,2,0,2" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Visible" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" />

            <Label x:Name="lbl_default" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox x:Name="chb_default" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" ></CheckBox>

            <Label x:Name="lbl_reportPath" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Width="140"  />
            <TextBox x:Name="txt_reportPath"  Grid.Row="6" Grid.Column="1" Margin="0,2,85,0" Controls:TextBoxHelper.SelectAllOnFocus="True" IsEnabled="False"
                                     Controls:TextBoxHelper.Watermark="Enter path with report file"/>
            <Button x:Name="btn_browse" Grid.Row="6" Content="Browse" Grid.Column="1" Margin="0,2,0,0" Height="28" VerticalAlignment="Top" Style="{DynamicResource AccentedSquareButtonStyle}" 
                    Controls:ButtonHelper.PreserveTextCase="True" Click="BtnBrowse_Click" HorizontalAlignment="Right" Width="80">
                <Button.ToolTip><TextBlock>Select the Report file </TextBlock></Button.ToolTip>
            </Button>

            <Label x:Name="lbl_timestamp" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:DateTimePicker x:Name="dp_timestamp" Grid.Row="7" Grid.Column="1" Margin="0,2,0,2" ShowDropDownButton="False"
                                        Controls:TextBoxHelper.UseFloatingWatermark="false" TextAlignment="Left"
                                        Controls:TextBoxHelper.Watermark="" Format="SortableDateTime" IsEnabled="False" CultureInfo="cs-CZ" />


            
            <Button Grid.Row="9" Name="btn_export" Grid.Column="0" HorizontalAlignment="Left" Margin="44,21,0,44" Width="200" Click="BtnExport_Click"
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" />
            <Button Grid.Row="10" Name="btn_save" Grid.Column="0" HorizontalAlignment="Left" Margin="44,21,0,44" Width="200" 
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}"
                Controls:ButtonHelper.PreserveTextCase="True" Click="BtnSave_Click" />
            <Button Grid.Row="10" Name="btn_cancel" Grid.Column="1" HorizontalAlignment="Right" Margin="44,21,44,44" Width="200" 
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Click="BtnCancel_Click" />
        </Grid>
    </Grid>
</UserControl>
