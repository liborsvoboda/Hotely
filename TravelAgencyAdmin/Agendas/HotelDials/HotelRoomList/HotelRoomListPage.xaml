<UserControl
    x:Class="TravelAgencyAdmin.Pages.HotelRoomListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:html="clr-namespace:EASYTools.HTMLEditorNoImg;assembly=EASYTools.HTMLEditorNoImg"
    xmlns:local="clr-namespace:TravelAgencyAdmin.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top" AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True"
                MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="120" />
                <RowDefinition Height="120" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_hotelId" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_hotelId" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2" HorizontalAlignment="Stretch"
                VerticalAlignment="Center" Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Name" IsEnabled="true"
                SelectedValuePath="Id" SelectionChanged="HotelSelectionChanged" />

            <Label
                x:Name="lbl_roomTypeId" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_roomTypeId" Grid.Row="2" Grid.Column="1" Margin="0,2,0,2" HorizontalAlignment="Stretch"
                VerticalAlignment="Center" Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Translation" IsEnabled="true"
                SelectedValuePath="Id" />

            <Label
                x:Name="lbl_name" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_name" Grid.Row="3" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" />

            <Label
                x:Name="lbl_descriptionCz" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <html:RichTextEditor
                x:Name="html_descriptionCz" Grid.Row="4" Grid.Column="1" Margin="0,2,0,2" BorderThickness="0.5" />

            <Label
                x:Name="lbl_descriptionEn" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <html:RichTextEditor
                x:Name="html_descriptionEn" Grid.Row="5" Grid.Column="1" Margin="0,2,0,2" BorderThickness="0.5" />

            <Label
                x:Name="lbl_price" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_price" Grid.Row="6" Grid.Column="1" Margin="0,2,40,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="true" HasDecimals="True" Maximum="9999999999.99" Minimum="0" NumericInputMode="Decimal"
                SelectAllOnFocus="True" StringFormat="N2" />
            <Label
                x:Name="lbl_defaultPriceUnit" Grid.Row="6" Grid.Column="1" Width="40" HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" FontSize="16" FontWeight="Bold" />

            <Label
                x:Name="lbl_extraBed" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_extraBed" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" />

            <Label
                x:Name="lbl_maxCapacity" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_maxCapacity" Grid.Row="8" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="true" HasDecimals="True" Maximum="99" Minimum="1" NumericInputMode="Numbers"
                SelectAllOnFocus="True" StringFormat="N0" />

            <Label
                x:Name="lbl_roomsCount" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_roomsCount" Grid.Row="9" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="true" HasDecimals="True" Maximum="999" Minimum="1" NumericInputMode="Numbers"
                SelectAllOnFocus="True" StringFormat="N0" />

            <Label
                x:Name="lbl_owner" Grid.Row="10" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                Visibility="Hidden" />
            <ComboBox
                x:Name="cb_owner" Grid.Row="10" Grid.Column="1" Margin="0,2,0,2" HorizontalAlignment="Stretch"
                VerticalAlignment="Center" Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="UserName" IsEnabled="true"
                SelectedValuePath="Id" Visibility="Hidden" />

            <Label
                x:Name="lbl_approveRequest" Grid.Row="11" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_approveRequest" Grid.Row="11" Grid.Column="1" VerticalAlignment="Center" />

            <Label
                x:Name="lbl_approved" Grid.Row="12" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_approved" Grid.Row="12" Grid.Column="1" VerticalAlignment="Center" IsEnabled="False" />

            <Label
                x:Name="lbl_image" Grid.Row="13" Grid.Column="0" Margin="0,0,90,0" HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Button
                x:Name="btn_browse" Grid.Row="13" Grid.Column="0" Width="80" Height="28"
                Margin="0,2,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Controls:ButtonHelper.PreserveTextCase="True" Click="BtnBrowse_Click"
                Content="Browse"
                Style="{DynamicResource AccentedSquareButtonStyle}">
                <Button.ToolTip>
                    <TextBlock>Select the Image file</TextBlock>
                </Button.ToolTip>
            </Button>
            <Image
                x:Name="img_photoPath" Grid.Row="13" Grid.Column="1" Height="60" Margin="10,0,0,0"
                HorizontalAlignment="Left" Source="\Data\no_photo.png" />

            <Button
                Name="btn_save" Grid.Row="15" Grid.Column="0" Width="200" Height="40"
                Margin="44,21,0,44" HorizontalAlignment="Left" VerticalAlignment="Bottom" Controls:ButtonHelper.PreserveTextCase="True" Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_cancel" Grid.Row="15" Grid.Column="1" Width="200" Height="40"
                Margin="44,21,44,44" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>