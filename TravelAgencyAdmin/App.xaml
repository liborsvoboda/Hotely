                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedTabControl.xaml" />

                <!--  EASYTools Include  -->
                <ResourceDictionary Source="pack://application:,,,/EASYTools.TouchKeyboard;component/Styles/OnScreenKeyoard.xaml" />

                <!--  Customizing for using as Global EASY SYSTEM Builder  -->
                <ResourceDictionary Source="GlobalStyles/MetroFix/MetroCheckComboBoxStyleFix.xaml" />
