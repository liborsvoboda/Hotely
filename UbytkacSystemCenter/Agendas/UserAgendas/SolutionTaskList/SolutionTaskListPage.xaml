<UserControl
    x:Class="EasyITSystemCenter.Pages.SolutionTaskListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pan="clr-namespace:Wpf.Controls.PanAndZoom;assembly=Wpf.Controls.PanAndZoom"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="160" />
                <RowDefinition Height="160" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0" Grid.Column="1"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_inheritedTargetType"
                Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_inheritedTargetType"
                Grid.Row="1" Grid.Column="1"
                Margin="0,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Translation" IsEnabled="true" SelectedValuePath="Name" />

            <Label
                x:Name="lbl_inheritedStatusType"
                Grid.Row="2" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_inheritedStatusType"
                Grid.Row="2" Grid.Column="1"
                Margin="0,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false" Controls:TextBoxHelper.IsWaitingForData="True" DisplayMemberPath="Translation" IsEnabled="true" SelectedValuePath="Name" />

            <Label
                x:Name="lbl_message"
                Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_message"
                Grid.Row="3" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" IsReadOnly="False" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />

            <Label
                x:Name="lbl_documentation"
                Grid.Row="4" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_documentation"
                Grid.Row="4" Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" IsReadOnly="False" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" />



            <Label
                x:Name="lbl_attachment"
                Grid.Row="5" Grid.Column="0"
                HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_attachment"
                Grid.Row="5" Grid.Column="1"
                Margin="0,2,200,30"
                Controls:TextBoxHelper.SelectAllOnFocus="True" Controls:TextBoxHelper.Watermark="Enter path with image file" IsEnabled="False" ToolTip="leave blank for no changes" />
            <Button
                x:Name="btn_browse"
                Grid.Row="5" Grid.Column="1"
                Width="80" Height="28"
                Margin="0,2,115,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                Click="btnBrowse_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}">
                <Button.ToolTip>
                    <TextBlock>Select the Attachment</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button
                x:Name="btn_exportAttachment"
                Grid.Row="5" Grid.Column="1"
                Width="110" Height="28"
                Margin="0,2,0,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                Click="ExportAttachment_Click" IsEnabled="False"
                Style="{DynamicResource AccentedSquareButtonStyle}">
                <Button.ToolTip>
                    <TextBlock>Select the Attachment</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button
                Grid.Row="6" Grid.Column="0"
                Width="50" Height="50"
                Margin="5,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                Click="TakeScreenShot_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                ToolTip="Insert Application Screenshot">
                <iconPacks:FontAwesome
                    Width="35" Height="35"
                    Kind="PeriscopeBrands" />
            </Button>

            <Button
                Name="btn_exportImage"
                Grid.Row="6" Grid.Column="0"
                Width="50" Height="50"
                Margin="0,70,10,0" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="ExportImage_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                ToolTip="Export Image">
                <iconPacks:FontAwesome
                    Width="35" Height="35"
                    Kind="FileExportSolid" />
            </Button>

            <pan:ZoomBorder
                Name="ZoomBorder"
                Grid.Row="6" Grid.RowSpan="4" Grid.Column="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                ClipToBounds="True" Focusable="True" Stretch="None" ZoomSpeed="1.2">
                <Image x:Name="img_image" Source="\Data\Images\no_photo.png" />
            </pan:ZoomBorder>


            <Button
                Name="btn_save"
                Grid.Row="10" Grid.Column="0"
                Click="BtnSave_Click"
                Style="{StaticResource DefaultSystemSaveButtonStyle}" />

            <Button
                Name="btn_cancel"
                Grid.Row="10" Grid.Column="1"
                Click="BtnCancel_Click"
                Style="{StaticResource DefaultSystemCancelButtonStyle}" />

        </Grid>
    </Grid>
</UserControl>