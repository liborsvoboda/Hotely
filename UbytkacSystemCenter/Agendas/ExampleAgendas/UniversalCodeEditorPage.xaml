<UserControl
    x:Class="EasyITSystemCenter.Pages.UniversalCodeEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:XamlExt="clr-namespace:EasyITSystemCenter.ProgramaticXamlBehaviors"
    xmlns:bh="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:code="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:EasyITSystemCenter"
    xmlns:forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Setting"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Foreground="White"
    Tag="Setting"
    mc:Ignorable="d">
    <DockPanel Background="DarkGray">
        <ToolBar
            Height="40"
            Background="DarkGray" DockPanel.Dock="Top">
            <ToolBar.Resources>
                <Style TargetType="{x:Type Image}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}, AncestorLevel=1}, Path=IsEnabled}" Value="False">
                            <Setter Property="Opacity" Value="0.80" />
                            <Setter Property="ToolTipService.InitialShowDelay" Value="0" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ToolBar.Resources>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Click="newFile_Click" ToolTip="Nový Soubor">
                <Image Height="16" Source="/Data/Images/New.png" />
            </Button>

            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Click="openFileClick" ToolTip="Otevřít Soubor">
                <Image Height="16" Source="/Data/Images/Open.png" />
            </Button>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Click="saveFileClick" ToolTip="Uložit">
                <Image Height="16" Source="/Data/Images/Save.png" />
            </Button>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Click="saveAsFileClick" ToolTip="Uložit Jako">
                <Image Height="16" Source="/Data/Images/SaveAs.png" />
            </Button>
            <Separator />
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Command="Cut" ToolTip="Vyjmout">
                <Image Height="16" Source="/Data/Images/Cut.png" />
            </Button>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Command="Copy" ToolTip="Zkopírovat">
                <Image Height="16" Source="/Data/Images/Copy.png" />
            </Button>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Command="Paste" ToolTip="Vložit">
                <Image Height="16" Source="/Data/Images/Paste.png" />
            </Button>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Command="Delete" ToolTip="Smazat Označené">
                <Image Height="16" Source="/Data/Images/Delete.png" />
            </Button>
            <Separator />
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Command="Undo" ToolTip="Zpět">
                <Image Height="16" Source="/Data/Images/Undo.png" />
            </Button>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Command="Redo" ToolTip="Vpřed">
                <Image Height="16" Source="/Data/Images/Redo.png" />
            </Button>
            <Separator />
            <CheckBox
                Margin="0,0,2,0"
                Cursor="Hand"
                IsChecked="{Binding ElementName=codeEditor, Path=WordWrap}"
                Style="{DynamicResource MetroButton}"
                ToolTip="Zalomit řádkování">
                <Image Height="16" Source="/Data/Images/WordWrap.png" />
            </CheckBox>

            <CheckBox
                Margin="0,0,2,0" Padding="5"
                Content="#" Cursor="Hand" FontSize="20"
                IsChecked="{Binding ElementName=codeEditor, Path=ShowLineNumbers}"
                Style="{DynamicResource MetroFlatToggleButton}"
                ToolTip="Zobrazit čísla řádků" />

            <CheckBox
                Margin="2,0,2,0" Padding="5" VerticalContentAlignment="Top"
                Content="¶" Cursor="Hand" FontSize="20"
                IsChecked="{Binding ElementName=codeEditor, Path=Options.ShowEndOfLine}"
                Style="{DynamicResource MetroFlatToggleButton}"
                ToolTip="Zobrazit konce řádků" />

            <ComboBox
                Name="highlightingComboBox"
                Width="130" Height="30"
                Margin="2,0,2,0" Padding="0"
                Background="LightGoldenrodYellow" Cursor="Hand" FontSize="16"
                ItemsSource="{Binding highlightingManager.HighlightingDefinitions}"
                SelectedItem="{Binding SyntaxHighlighting, ElementName=codeEditor}"
                SelectionChanged="HighlightingComboBox_SelectionChanged" ToolTip="Zvolte si Podporu Jazyku" />

            <Separator />

            <ComboBox
                Name="cb_templates"
                Width="130" Height="30"
                Margin="2,0,2,0" Padding="0"
                Background="LightGoldenrodYellow" Cursor="Hand" DisplayMemberPath="Name" FontSize="16" IsTextSearchEnabled="True"
                SelectedItem="{Binding SyntaxHighlighting, ElementName=codeEditor}"
                SelectedValuePath="Id" SelectionChanged="TemplateSelected" ToolTip="Vyberte si Šablonu" />

            <Separator />

            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Click="AddMarkerFromSelectionClick" ToolTip="Označit">
                <iconPacks:BootstrapIcons Kind="Pen" />
            </Button>

            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Click="RemoveSelectedClick" ToolTip="Odznačit">
                <iconPacks:BootstrapIcons Kind="CloudMinus" />
            </Button>
            <Button
                XamlExt:CompoundStyle.StyleKeys="MahApps.Metro.Styles.MetroButton,ExtensionsEditorButtonStyle" Click="RemoveAllClick" ToolTip="Odebrat všechny značky">
                <iconPacks:BootstrapIcons Kind="ClipboardMinus" />
            </Button>
            <Separator />

            <Button
                x:Name="btn_theme"
                Width="40" Height="30"
                Margin="2,0,2,0" HorizontalAlignment="Right"
                Background="LightYellow" Click="btnTheme_Click" Cursor="Hand" FontWeight="ExtraBlack" Foreground="Black"
                Style="{DynamicResource MetroButton}"
                ToolTip="Light / Dark " ToolTipService.InitialShowDelay="0" ToolTipService.ShowOnDisabled="True">
                <iconPacks:BootstrapIcons Kind="EyeFill" />
            </Button>

            <Button
                Width="40" Height="30"
                Margin="2,0,2,0" HorizontalAlignment="Right"
                Cursor="Hand" IsEnabled="False"
                Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                ToolTip="CTRL+F Najít, Nahradit" ToolTipService.InitialShowDelay="0" ToolTipService.ShowOnDisabled="True">
                <iconPacks:BootstrapIcons Kind="InfoCircleFill" />
            </Button>
            <Separator />
            <DockPanel MinWidth="180" HorizontalAlignment="Center">
                <xctk:WatermarkTextBox
                    x:Name="lbl_openedFile"
                    Width="150" Height="30"
                    Margin="2" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center"
                    Background="LightBlue" FontSize="10" Foreground="Black" IsReadOnly="True" ToolTip="Název Souboru" />
                <Button
                    Width="20" Height="30"
                    Click="newFile_Click"
                    Style="{StaticResource ExtensionsEditorButtonStyle}"
                    ToolTip="Zavřít bez Uložení">
                    <Image
                        Width="8" Height="8"
                        Source="/Data/Images/Exit.png" Stretch="Uniform" />
                </Button>
            </DockPanel>
        </ToolBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>


            <code:TextEditor
                Name="codeEditor"
                FontFamily="Consolas" FontSize="10pt" HorizontalScrollBarVisibility="Auto" ShowLineNumbers="True" SyntaxHighlighting="C#" VerticalScrollBarVisibility="Auto">
                <code:TextEditor.ContextMenu>
                    <ContextMenu>
                        <ContextMenu.Resources>
                            <Style TargetType="MenuItem">
                                <Setter Property="CommandParameter" Value="{Binding Path=., RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}}" />
                            </Style>
                        </ContextMenu.Resources>
                        <MenuItem Command="Undo" />
                        <MenuItem Command="Redo" />
                        <Separator />
                        <MenuItem Command="Cut" />
                        <MenuItem Command="Copy" />
                        <MenuItem Command="Paste" />
                    </ContextMenu>
                </code:TextEditor.ContextMenu>
            </code:TextEditor>
            <GridSplitter
                Grid.Column="1"
                Width="4"
                HorizontalAlignment="Left" />
            <DockPanel Grid.Column="1" Margin="4,0,0,0">
                <ComboBox
                    Name="propertyGridComboBox"
                    DockPanel.Dock="Top" SelectedIndex="0" SelectionChanged="propertyGridComboBoxSelectionChanged">
                    <ComboBoxItem>Editor</ComboBoxItem>
                    <ComboBoxItem>Nastavení</ComboBoxItem>
                    <!--<ComboBoxItem Visibility="Hidden">TextArea</ComboBoxItem>-->
                </ComboBox>
                <WindowsFormsHost Name="propertyGridHost" DockPanel.Dock="Right">
                    <forms:PropertyGrid x:Name="propertyGrid" />
                </WindowsFormsHost>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>