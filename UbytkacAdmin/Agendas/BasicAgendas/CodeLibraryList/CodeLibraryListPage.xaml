<UserControl
    x:Class="EasyITSystemCenter.Pages.CodeLibraryListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:code="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:html="clr-namespace:EASYTools.HTMLFullEditor;assembly=EASYTools.HTMLFullEditor"
    xmlns:local="clr-namespace:EasyITSystemCenter.Pages"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" IsReadOnly="True" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource LightColorBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>


            <UniformGrid
                Grid.RowSpan="5"
                Columns="0" Rows="0">
                <ListView
                    x:Name="lb_dataList"
                    Margin="2"
                    BorderThickness="1" MouseDoubleClick="DataListDoubleClick"
                    Style="{StaticResource VirtualisedMetroListView}"
                    ToolTip="Double click for Change Select">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                x:Name="lb_idColumn"
                                Width="30"
                                DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn
                                x:Name="lb_nameColumn"
                                Width="160"
                                DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </UniformGrid>

            <Label
                x:Name="lbl_id"
                Grid.Row="0" Grid.Column="1"
                HorizontalAlignment="Left" HorizontalContentAlignment="Left" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0" Grid.Column="2"
                Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <ListBox
                x:Name="code_selector"
                Grid.Row="3" Grid.Column="1"
                Height="50"
                SelectionChanged="HighlightCodeChanged">
                <ListBoxItem Content="JavaScript" />
                <ListBoxItem Content="HTML" />
                <ListBoxItem Content="C#" />
                <ListBoxItem Content="XML" />
                <ListBoxItem Content="Java" />
                <ListBoxItem Content="C++" />
            </ListBox>

            <Label
                x:Name="lbl_name"
                Grid.Row="1" Grid.Column="1"
                HorizontalAlignment="Left" HorizontalContentAlignment="Left" />
            <TextBox
                x:Name="txt_name"
                Grid.Row="1" Grid.Column="2"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true" Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" ToolTip="Name must be unique" />

            <TextBox
                x:Name="txt_description"
                Grid.Row="3" Grid.Column="2"
                Height="50"
                Margin="0,2,320,2"
                Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" AcceptsReturn="True" TextWrapping="Wrap" ToolTip="Poznámka" VerticalScrollBarVisibility="Visible" />

            <!--<Button
                Name="btn_openInBrowser" Grid.Row="3" Grid.Column="2" Width="150" Height="35"
                Margin="0,2,160,2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnOpenInBrowser_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />-->

            <Button
                Name="btn_loadFromFile"
                Grid.Row="3" Grid.Column="2"
                Width="150" Height="35"
                Margin="0,2,0,2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnLoadFromFile_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />



            <code:TextEditor
                x:Name="txt_codeContent"
                Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                Margin="0,2,0,2"
                FontFamily="Consolas" FontSize="10pt" HorizontalScrollBarVisibility="Auto" SyntaxHighlighting="JavaScript" VerticalScrollBarVisibility="Auto" />

            <html:HtmlEditor
                x:Name="html_htmlContent"
                Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                Margin="0,2,0,2"
                BorderThickness="0.5"
                HtmlContent="{Binding SourceCode}"
                Visibility="Hidden" />



            <mah:MetroHeader
                Grid.Row="5" Grid.Column="0"
                HorizontalAlignment="Center"
                Header="Text Editor | HTML Editor">
                <mah:ToggleSwitch
                    x:Name="EditorSelector"
                    Margin="2"
                    Checked="EditorSelectorStatus" Unchecked="EditorSelectorStatus" />
            </mah:MetroHeader>





            <Button
                Name="btn_save"
                Grid.Row="5" Grid.Column="1"
                Width="80" Height="40"
                Margin="10,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <Button
                Name="btn_saveAsNew"
                Grid.Row="5" Grid.Column="2"
                Width="200" Height="40"
                Margin="20,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Click="BtnSaveAsNew_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <Button
                Name="btn_saveClose"
                Grid.Row="5" Grid.Column="2"
                Width="200" Height="40"
                Margin="0,0,270,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnSaveClose_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <Button
                Name="btn_cancel"
                Grid.Row="5" Grid.Column="2"
                Width="200" Height="40"
                Margin="44,0,24,10" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>